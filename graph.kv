#:kivy 1.0.9
#  This is the kivy file which contains the gui information for a
#  graphing program written for Capstone, Spring 2018.
#
#  Team:  Scorpius
#  Team members:  John Carrabino, Aaron Peressini, Cheryl Freeman

<GraphSession>:
    BoxLayout:
        id:             blayout
        orientation:    'vertical'
        size:           self.parent.size
        pos:            self.parent.pos
        ScreenManager:
            id: sm

            Screen:
                size:   blayout.size
                pos:    blayout.pos
                name:   'screen0'
                Popup:
                    id:     intro_popup
                    size:   self.parent.size
                    pos:    self.parent.pos
                    title:  'Scorpius Plotter'
                    FloatLayout:
                        orientation:  'vertical'
                        Label:  
#                           With thanks to https://blog.kivy.org/2014/07/wrapping-text-in-kivys-label/
                            size_hint_y:    None
                            size_hint_x:    0.5
                            pos_hint:       {'x': 0, 'y': 0.8}
                            text_size:      self.width, None
                            height:         self.texture_size[1]
                            text:           root.welcome_text
                        Button:
                            id:             next_screen
                            size_hint_y:    0.15
                            size_hint_x:    0.2
                            pos_hint:       {'x': 0.79, 'y': 0.01}
                            on_press:       sm.current = 'screen1'
                            text:           'Next' 

            Screen:
                size:   blayout.size
                pos:    blayout.pos
                name:   'screen1'
                id:     file_screen
                on_enter:       root.clear_previous_selections()
                Popup:
                    id:         file_popup
                    size:       self.parent.size
                    pos:        self.parent.pos
                    title:      'Select data file to graph'
                    FloatLayout:
                        id:                 myfloat
                        Label:
                            size_hint_y:    None
                            size_hint_x:    0.5
                            pos_hint:       {'x': 0.15, 'y': 0.25}
                            text_size:      self.width, None
                            height:         self.texture_size[1]
                            text:           root.path
                        FileChooserIconView:
                            id:             file_chooser
                            path:           root.path
                            on_selection:   root.filename = self.selection[0]
                        Button:
                            id:             next_screen
                            size_hint_y:    0.15
                            size_hint_x:    0.2
                            pos_hint:       {'x': 0.79, 'y': 0.01}
                            on_press:       root.ensureInput('file', file_errorlabel, 'x')
                            text:           'Next' 
                        Label:
                            id:             file_errorlabel
                            color:          1.0, .27, 0.0, 1.0
                            pos_hint:       {'x': 0.15, 'y': 0.1}
                            size_hint_y:    None
                            size_hint_x:    0.5
                            text_size:      self.width, None
                            height:         self.texture_size[1]

            Screen:
                size:   blayout.size
                pos:    blayout.pos
                name:   'screenDelim'
                id:     delim_screen     
#                on_enter:   print root.filename
                Popup:
                    id:         delim_popup
                    size:       self.parent.size
                    pos:        self.parent.pos
                    title:      'Select the delimiter used between data columns'
                    BoxLayout:
                        orientation:        'vertical'
                        Label:
                            size_hint_y:    0.3
                            pos_hint:       {'x': 0.15, 'y': 0.25}
                            text_size:      self.width, None
                            height:         self.texture_size[1]
                            text:           str(root.filename)
                        BoxLayout:
                            id:             centeringRadios
                            orientation:    'horizontal'
                            size_hint_y:     0.5
                            Widget:
                            GridLayout:
                                id:             groupGrid
                                cols:           2
                                size_hint_x:     0.5
                                CheckBox:
                                    active:         True
                                    name:           '\t'
        #  Note for future improvement:  read the file extension and if it is a .csv file, default so that
        #  the comma delimiter is checked instead of the tab.
                                    group:          'delimiters'
                                Label:
                                    text:           'Tab'
                                    text_size:      self.size
                                    halign:         'left'
                                    valign:         'middle'
                                CheckBox:
                                    name:            ','
                                    group:          'delimiters'
                                Label:
                                    text:           'Comma'
                                    text_size:      self.size
                                    halign:         'left'
                                    valign:         'middle'
                                CheckBox:
                                    name:             ';'
                                    group:          'delimiters'
                                Label:
                                    text:           'Semi-colon'
                                    text_size:      self.size
                                    halign:         'left'
                                    valign:         'middle'
                                CheckBox:
                                    name:            ' '
                                    group:          'delimiters'
                                Label:
                                    text:           'Space'
                                    text_size:      self.size
                                    halign:         'left'
                                    valign:         'middle'
                            Widget: 
                        Button:
                            id:             next_screen
                            size_hint_y:    0.15
                            size_hint_x:    0.2
                            pos_hint:       {'x': 0.79, 'y': 0.01}
#  The last children reference is for the grid layout
                            on_press:       root.recordDelimiterChoice(self.parent.children[1].children[1].children)
                            text:           'Next' 


            Screen:
                size:       blayout.size
                pos:        blayout.pos
                name:       'screenX'
                Popup:
                    id:     x_axis_confirmation_popup
                    size:   self.parent.size
                    pos:    self.parent.pos
                    title:  'Confirm x-axis selection'
                    FloatLayout:
                        size:           self.parent.size
                        pos:            self.parent.pos
                        Label:
                            text:       'You have selected ' + root.x_axis + ' as your x-axis. Continue?'
                            
                        Button:
                            id:             next_screen
                            size_hint_y:    0.15
                            size_hint_x:    0.2
                            pos_hint:       {'x': 0.79, 'y': 0.01}
                            on_press:       root.print_axis('x'); root.header_choices('y')
                            text:           'Next' 
                        Button:
                            id:             change_x_axis
                            size_hint_y:    0.15
                            size_hint_x:    0.2
                            pos_hint:       {'x': 0.45, 'y': 0.25}
                            on_press:       root.header_choices('x')
                            text:           'Change X-Axis \nSelection'
                            halign:         'center'
                            #text_size:      self.size 
                        Button:
                            id:             previous_screen
                            size_hint_y:    0.15
                            size_hint_x:    0.2
                            pos_hint:       {'x': 0.2, 'y': 0.25}
                            on_press:       sm.current = 'screen1'
                            text:           'Change Data File \nSelection' 
                            halign:         'center'

            Screen:
                size:       blayout.size
                pos:        blayout.pos
                name:       'screenY'
                Popup:
                    id:     y_axis_popup
                    size:   self.parent.size
                    pos:    self.parent.pos
                    title:  'Confirm y-axis selection'
                    FloatLayout:
                        size:           self.parent.size
                        pos:            self.parent.pos
                        Label:
                            text:       'You have selected ' + root.y_axis + ' as your y-axis. Continue?'
                            #text:       root.filename
                            
                        Button:
                            id:             next_screen
                            size_hint_y:    0.15
                            size_hint_x:    0.2
                            pos_hint:       {'x': 0.79, 'y': 0.01}
                            on_press:       root.print_axis('y'); sm.current = 'screen3'
                            text:           'Next' 
                        Button:
                            id:             change_y_axis
                            size_hint_y:    0.15
                            size_hint_x:    0.2
                            pos_hint:       {'x': 0.45, 'y': 0.25}
                            on_press:       root.header_choices('y')
                            text:           'Change Y-Axis \nSelection'
                            halign:         'center'
                        Button:
                            id:             previous_screen
                            size_hint_y:    0.15
                            size_hint_x:    0.2
                            pos_hint:       {'x': 0.2, 'y': 0.25}
                            on_press:       root.header_choices('x') #sm.current = 'screen1'
                            text:           'Change X-Axis \nSelection'
                            halign:         'center'

            Screen:
                size:       blayout.size
                pos:        blayout.pos
                name:       'screen3'
                Popup:
                    id:     graph_popup
                    size:   self.parent.size
                    pos:    self.parent.pos
                    title:  'Select the type of graph you wish to see'
                FloatLayout:
                    #graph_now: line_graph
#                    orientation:    'vertical'
                    size:           self.parent.size
                    pos:            self.parent.pos

                    Button:
                        id:         line_graph
                        pos_hint:       {'x': 0.15, 'y': 0.4}
                        size_hint:       [0.15, 0.2]
                        on_press:   root.create_graph(self)
                        text:       "Line Graph"
                        halign:     'center'

                    Button:
                        id:         scatter_button
                        pos_hint:       {'x': 0.4, 'y': 0.4}
                        size_hint:       [0.15, 0.2]
                        on_press:   root.create_graph(self)
                        text:       "Scatter Graph"
                        halign:         'center'

                    Button:
                        id:         bar_button
                        pos_hint:       {'x': 0.65, 'y': 0.4}
                        size_hint:       [0.15, 0.2]
                        on_press:   root.create_graph(self)
                        text:       "Bar Graph\n(hardcoded)"
                        halign:         'center'
                    Button:
                        id:             change_headers
                        size_hint_y:    0.15
                        size_hint_x:    0.2
                        pos_hint:       {'x': 0.25, 'y': 0.1}
                        on_press:       root.header_choices('x') #sm.current = 'screen1'
                        text:           'Change Headers'
                    Button:
                        id:             change_file
                        size_hint_y:    0.15
                        size_hint_x:    0.2
                        pos_hint:       {'x': 0.5, 'y': 0.1}
                        on_press:       sm.current = 'screen1'
                        text:           'Change File'

        



